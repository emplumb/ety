<%= form_tag "/home/update", method: :post do %>
  <div class="container entries-top-margin end-pad">
    <div class="row">
      <div class="col-md-offset-1 col-md-8 col-sm-offset-1 col-sm-8">
        <h3>New Post</h3>

        <hr />

        <div class="form-group">
          <%= label_tag :title, "Title" %>
          <%= text_field_tag :title, @post.title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= label_tag :body, "Body" %>
          <%= text_area_tag :body, @post.body, class: 'form-control', rows: "8" %>
        </div>

        <p><%= submit_tag "Create Post", data: { :confirm => "Do you wish to continue?" }, class: "btn btn-success no-radius" %></p>

        <%= link_to "Cancel", root_path %>
      </div>
    </div>
  </div>
<% end %>