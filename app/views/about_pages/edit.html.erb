<%= form_tag "/about/#{@about_page.id}", method: :patch do %>
  <div class="container-fluid entries-top-margin end-pad">
    <div class="row">
      <div class="col-md-offset-1 col-md-10 col-sm-offset-1 col-sm-10">
        <%= link_to "Cancel", "/about" %>
        <%= hidden_field_tag :id, @about_page.id %>
        <h3>Edit About Page</h3>

        <hr />

        <div class="form-group">
          <%= label_tag :quote, "Quote" %>
          <%= text_area_tag :quote, @about_page.quote, class: 'form-control', rows: "5" %>
        </div>  

        <div class="form-group">
          <%= label_tag :body, "Body" %>
          <%= text_area_tag :body, @about_page.body, class: 'form-control', rows: "20" %>
        </div>

        <p><%= submit_tag "Save Changes", data: { :confirm => "Do you wish to continue?" }, class: "btn btn-success no-radius" %>
        </p>
        <div><%= link_to "Cancel", "/about" %></div>

      </div>
    </div>
  </div>
<% end %>