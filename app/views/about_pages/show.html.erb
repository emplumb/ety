<head>
  <title>About | OEDoS</title>
</head>

<div class="container">
  <div class="row end-pad">
  	
  	<% if admin_signed_in? %>
      <div class="font col-md-7 col-md-offset-2">
        <%= link_to "Edit", "/about/#{@about_page.id}/edit", class: "btn btn-default no-radius entries-top-margin" %>
      </div>
    <% end %>
  	
  	<% if @about_page.quote.present? %>
  		<div class="col-md-5 col-md-offset-3 blockquote" id="notice">
				<div class="line-wrap"><%= sanitize(@about_page.quote, tags: %w(b em a u i sup sub p div br, span), attributes: %w(href)) %></div>
			</div>
	  <% end %>


    <div class="font col-md-7 col-md-offset-2">
      <hr />
      <br />
			
			<div class="line-wrap"><%= sanitize(@about_page.body, tags: %w(b em a u i sup sub p div br span), attributes: %w(href)) %></div>
    </div>
  </div>
</div>
