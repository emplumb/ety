<div class="container">
  <div class="row end-pad">
    <div class="font col-md-7 col-md-offset-2">
      <div class="page-header">
        <h2>Contact Us</h2>
      </div>

      <br />

      <p>Please reach out to us for any questions, comments, or suggestions. We appreciate all feedback.</p>
      
      <br />

      <p>&#42; required field</p>
      
      <br />

      <form action="/submit_message" method="POST">
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

        <div class="form-group">
          <label for="name" class="control-label">
            Name &#42;
          </label>
          <input required type="text" id="firstname" name="firstname" placeholder="First Name" class="form-control" maxlength="50" pattern="[a-zA-ZáéíñóúüÁÉÍÑÓÚÜ\- ]+" title="Name should only contain letters">
        </div>

        <div class="form-group">
          <input required type="text" id="lastname" name="lastname" placeholder="Last Name" class="form-control" maxlength="50" pattern="[a-zA-ZáéíñóúüÁÉÍÑÓÚÜ\- ]+" title="Name should only contain letters">
        </div>

        <div class="form-group">
          <label for="email" class="control-label">
            Email &#42;
          </label>
          <input required type="text" id="email" name="email" class="form-control" maxlength="75" pattern="[/\A([\w+\-](\.[\w+\-])?)+@[a-z\d\-]+(\.[a-z]+)*\.[a-z]+\z/i]">
        </div>

        <div class="form-group fax">
          <%= label_tag :fax, "Fax *", class: "control-label" %> 
          <input type="text" id="fax" name="fax" value="" class="form-control", tabindex="-1", autocomplete="nope">
        </div>

        <div class="form-group">
          <label for="subject" class="control-label">
            Subject &#42;
          </label>
          <input required type="text" id="subject" name="subject" class="form-control">
        </div>

        <div class="form-group">
          <label for="body" class="control-label">
            Body &#42;
          </label>
          <textarea required name="body" class="form-control" rows="5" id="body"></textarea>
        </div>

        <button class="btn btn-primary" id="submit">Submit</button>
        <%= link_to "Cancel", root_path, id: "cancel" %>
      </form>
    </div>
  </div>
</div>
