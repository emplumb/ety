<div class="container">
  <div class="row end-pad">
    <div class="font col-md-7 col-md-offset-2 <%= 'header-indent' if admin_signed_in? %>">
      <div><%= link_to_if(admin_signed_in?, "Add Source", "/source/new", class: "btn btn-success no-radius entries-top-margin") do end %></div>
      <h2 class="page-header">Sources</h2>
    </div>

    <div class="font col-md-7 col-md-offset-2">
      <% @sources.each do |source| %>
        <div class="flexbox">
          
          <% if admin_signed_in? %>
            <div class="col">
              <%= link_to "Edit", "/source/#{source.id}/edit", class: "btn btn-default no-radius" %>
            </div>
          <% end %>

          <div class="col">
            <%= sanitize(source.author_formatted, 
                tags: %w(b u i sup sub)) %>
            <%= sanitize(source.article_formatted, tags: %w(b u i sup sub)) %>
            <%= sanitize(source.other, tags: %w(b u i sup sub)) %>
            <span class="<%= source.source_styles(source.book) %>"><%= sanitize(source.book, tags: %w(b u i sup sub)) %></span><%= source.add_period(source.book) %>
            <span class="<%= source.source_styles(source.journal) %>"><%= sanitize(source.journal, tags: %w(b u i sup sub)) %></span><%= source.add_period(source.journal) %>
            <%= sanitize(source.printing_formatted, tags: %w(b u i sup sub)) %>
            <%= sanitize(source.year_formatted, tags: %w(b u i sup sub)) %>
            <%= sanitize(source.website_formatted, tags: %w(b u i sup sub)) %>
          </div>
          
        </div>  
      <% end %>
    </div>
  </div>
</div>