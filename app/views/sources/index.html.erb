<div class="container">
  <div class="row end-pad">
    <div class="font col-md-7 col-md-offset-2">
      <h2 class="page-header">Bibliography</h2>
        <% @sources.each do |source| %>
          <p>
            <%= link_to_if(admin_signed_in?, sanitize(source.author, tags: %w(b a u i sup sub p div), attributes: %w(href)), "/source/#{source.id}/edit") do
            sanitize source.author, tags: %w(a u i sup sub), attributes: %w(href) end %>
            <%= sanitize(source.reference, tags: %w(u i sup sub p div)) %>
          </p>
        <% end %>
    </div>
  </div>
</div>

