<div class="container bottom-margin entries-top-margin">
  <div class="row">
    <div class="col-lg-offset-3 col-lg-3">
      <%= form_tag '/login', method: 'post', :class => 'form' do  %>
        <div class="form-group">
          <%= label_tag 'username', 'Username'%>
          <%= email_field_tag :username, params[:username], class: 'form-control', autofocus: true %>
        </div>
        <div class="form-group">
          <%=label_tag 'password', "Password" %>
          <%= password_field_tag :password, nil, class: 'form-control'  %>
        </div>
        <%= submit_tag "Login", class: 'btn btn-default btn-submit' %>
      <%end%>
    </div>
  </div>
</div>
