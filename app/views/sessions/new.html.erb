<div class="container bottom-margin entries-top-margin">
  <div class="row">
    <div class="col-md-offset-3 col-md-4">
      <%= form_tag '/login', method: 'post', :class => 'form panel panel-primary grey-background' do  %>
        <div class="panel-heading bottom-margin"><h3 class="text-center">Account Login</h3></div>

        <div class="panel-body lr-margin">
          <div class="form-group">
            <%= text_field_tag :username, params[:username], :placeholder => "Username", class: 'form-control no-radius', autofocus: true %>
          </div>
          
          <div class="form-group">
            <%= password_field_tag :password, nil, :placeholder => "Password", class: 'form-control no-radius'  %>
          </div>
          
          <div class="fax">
            <%= label_tag :fax %>      
            <%= text_field_tag :fax, value = "", :tabindex => '-1', :autocomplete => 'nope' %>
          </div>
          
          <div class="form-group">
            <%= check_box_tag :remember_me, params[:remember_me], class: 'inline' %>
            <span>Remember me</span>
          </div>

          <%= submit_tag "Login", class: 'btn btn-success btn-submit no-radius full-width entries-bottom-margin' %>
        </div>
      <%end%>
    </div>
  </div>
</div>
