<div class="container-fluid">
  <div class="row">
    <div class="text-center">
      <%= paginate @terms %>
    </div>
  </div>
  <div class="row end-pad">
    <div class="col-md-6 col-md-offset-3">
      <table class="table table-striped table-hover">
        <% @terms.each do |term| %>
        <dl>
          <tr>
            <td class="table-spacing">
              <b><a href="/term/<%= term.slug %>"><%= term.name %></a></b>
              <%= term.gender %>
              <%= term.p_s %>
              <%= term.part_of_speech %>
              <%= sanitize term.definition, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
              <p></p>
              <%= sanitize term.etymology1, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
              <%= sanitize term.etymology2, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
              <%= sanitize term.uses, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
              <p></p>
              <%= sanitize term.notes1, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
              <p></p>
              <%= sanitize term.notes2, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
            </td>
          </tr>
        </dl>
        <% end %>
      </table>

      <div class="row">
        <div class="text-center">
          <%= paginate @terms %>
        </div>
      </div>

      <div class="dropdown mobile-hidden">
        <button class="btn btn-default btn-lg dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          Browse by letter
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" id="mobile-alphabet" aria-labelledby="dropdownMenu1">
          <% ('A' .. 'C').each do |alphabet| %>
          <li id="mobile-alphabet"><a href="/directory/<%= alphabet.downcase %>"><%= alphabet %></a></li>
          <% end %>
          <li id="mobile-alphabet"><a href="/directory/ch">CH</a></li>
          <% ('D' .. 'L').each do |alphabet| %>
          <li id="mobile-alphabet"><a href="/directory/<%= alphabet.downcase %>"><%= alphabet %></a></li>
          <% end %>
          <li id="mobile-alphabet"><a href="/directory/ll">LL</a></li>
          <li id="mobile-alphabet"><a href="/directory/m">M</a></li>
          <li id="mobile-alphabet"><a href="/directory/n">N</a></li>
          <li id="mobile-alphabet"><a href="/directory/ñ">Ñ</a></li>
          <% ('O' .. 'Z').each do |alphabet| %>
          <li id="mobile-alphabet"><a href="/directory/<%= alphabet.downcase %>"><%= alphabet %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>


