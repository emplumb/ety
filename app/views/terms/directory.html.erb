<div class="container-fluid">
  <div class="row">
    <div class="text-center">
      <%= paginate @terms %>
    </div>
  </div>
  <div class="row end-pad">
    <div class="col-md-6 col-md-offset-3">
      <table class="table table-striped table-hover">
        <% @terms.each do |term| %>
          <tr>
            <td class="table-spacing">
              <b><a href="/term/<%= term.slug %>"><%= term.name %></a></b>
              <%= term.gender %>
              <%= term.p_s %>
              <%= term.part_of_speech %>
              <%= sanitize term.definition, tags: %w(b em a u i sup sub p), attributes: %w(href) %>

              <% if term.etymology1.present? %>
                <p></p>
                <%= sanitize term.etymology1, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
              <% end %>

              <%= sanitize term.etymology2, tags: %w(b em a u i sup sub p), attributes: %w(href) %>

              <% if term.uses.present? %>
                <p></p>
                <%= sanitize term.uses, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
              <% end %>

              <% if term.variants.present? %>
                <p></p>
                <div class="p-indent">
                  <b><u>Dialect Variants:</u></b>
                  <%= sanitize term.variants, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                </div>
              <% end %>

              <% if term.romance_cognates.present? %>
                <p></p>
                <div class="p-indent">
                  <b><u>Romance:</u></b>
                  <%= sanitize term.romance_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                </div>
              <% end %>

              <% if term.italic_cognates.present? %>
                <p></p>
                <div class="p-indent">
                  <b><u>Italic:</u></b>
                  <%= sanitize term.italic_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                </div>
              <% end %>

              <% if term.etruscan.present? %>
                <p></p>
                <div class="p-indent">
                  <b><u>Etruscan:</u></b>
                  <%= sanitize term.etruscan, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                </div>
              <% end %>

              <% if term.celtic_cognates.present? %>
                <p></p>
                <div class="p-indent">
                  <b><u>Celtic:</u></b>
                  <%= sanitize term.celtic_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                </div>
              <% end %>

              <% if term.germanic_cognates.present? %>
                <p></p>
                <div class="p-indent">
                  <b><u>Germanic:</u></b>
                  <%= sanitize term.germanic_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                </div>
              <% end %>

              <% if term.baltoslavic_cognates.present? %>
                <p></p>
                <div class="p-indent">
                  <b><u>Balto-Slavic:</u></b>
                  <%= sanitize term.baltoslavic_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                </div>
              <% end %>

              <% if term.albanian_cognates.present? %>
                <p></p>
                <div class="p-indent">
                  <b><u>Albanian:</u></b>
                  <%= sanitize term.albanian_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                </div>
              <% end %>

              <% if term.hellenic_cognates.present? %>
                <p></p>
                <div class="p-indent">
                  <b><u>Hellenic:</u></b>
                  <%= sanitize term.hellenic_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                </div>
              <% end %>

              <% if term.armenian_cognates.present? %>
                <p></p>
                <div class="p-indent">
                  <b><u>Armenian:</u></b>
                  <%= sanitize term.armenian_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                </div>
              <% end %>

              <% if term.indoiranian_cognates.present? %>
                <p></p>
                <div class="p-indent">
                  <b><u>Indo-Iranian:</u></b>
                  <%= sanitize term.indoiranian_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                </div>
              <% end %>

              <% if term.semitic.present? %>
                <p></p>
                <div class="p-indent">
                  <b><u>Semitic:</u></b>
                  <%= sanitize term.semitic, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                </div>
              <% end %>

              <% if term.uralic.present? %>
                <p></p>
                <div class="p-indent">
                  <b><u>Uralic:</u></b>
                  <%= sanitize term.semitic, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                </div>
              <% end %>

              <% if term.ne_caucasian.present? %>
                <p></p>
                <div class="p-indent">
                  <b><u>Northeast Caucasian:</u></b>
                  <%= sanitize term.ne_caucasian, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                </div>
              <% end %>

              <% if term.ie_cognates.present? %>
                <p></p>
                <div class="p-indent">
                  <b><u>Indo-European:</u></b>
                <%= sanitize term.ie_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                </div>
              <% end %>

              <% if term.notes1.present? %>
                <p></p>
                <%= sanitize term.notes1, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
              <% end %>

              <% if term.notes2.present? %>
                <p></p>
                <%= sanitize term.notes2, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
              <% end %>

            </td>
          </tr>
        <% end %>
      </table>

      <div class="row" id="tab-pad">
        <div class="text-center">
          <%= paginate @terms %>
        </div>
      </div>

      <div class="dropdown mobile-hidden">
        <button class="btn btn-default btn-lg dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          Browse by letter
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" id="mobile-alphabet" aria-labelledby="dropdownMenu1">
          <% ('A' .. 'C').each do |alphabet| %>
          <li id="mobile-alphabet"><a href="/directory/<%= alphabet.downcase %>"><%= alphabet %></a></li>
          <% end %>
          <li id="mobile-alphabet"><a href="/directory/ch">CH</a></li>
          <% ('D' .. 'L').each do |alphabet| %>
          <li id="mobile-alphabet"><a href="/directory/<%= alphabet.downcase %>"><%= alphabet %></a></li>
          <% end %>
          <li id="mobile-alphabet"><a href="/directory/ll">LL</a></li>
          <li id="mobile-alphabet"><a href="/directory/m">M</a></li>
          <li id="mobile-alphabet"><a href="/directory/n">N</a></li>
          <li id="mobile-alphabet"><a href="/directory/ñ">Ñ</a></li>
          <% ('O' .. 'Z').each do |alphabet| %>
          <li id="mobile-alphabet"><a href="/directory/<%= alphabet.downcase %>"><%= alphabet %></a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>


