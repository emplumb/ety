<div class="container-fluid">
  <div class="row end-pad">
    <div class="col-md-6 col-md-offset-3">
      <div class="page-header">
        <h3 class="text-center">Word of the Day</h3>
      </div>
      <table class="table table-striped">
        <dl>
          <tr>
            <td>
              <b><a href="/term/<%= @term.name %>"><%= @term.name %></a></b>
              <%= @term.gender %>
              (<%= @term.part_of_speech %>)
              <%= @term.definition.html_safe %>
              <%= @term.etymology1.html_safe %>
              <%= @term.etymology2.html_safe %>
              <%= @term.uses.html_safe %>
              <p></p>
              <div class="indent"><u><b>Romance Cognates:</b></u> <%= @term.romance_cognates.html_safe %></div>
              <p></p>
              <%= @term.notes1.html_safe %>
              <%= @term.notes2.html_safe %>
              <%= @term.quote1.html_safe %>
              <%= @term.quote2.html_safe %>
            </td>
          </tr>
        </dl>
      </table>
      <div id="m-alph-pad">
        <table class="table table-striped" id="m-table">
          <dl>
            <tr>
              <td>
                <div id="alphabet-mobile">
                  <ul>
                    <% ('A' .. 'C').each do |alphabet| %>
                    <li><a href="/directory/<%= alphabet.downcase %>"><%= alphabet %></a></li>
                    <% end %>
                    <li><a href="/directory/ch">CH</a></li>
                    <% ('D' .. 'L').each do |alphabet| %>
                    <li><a href="/directory/<%= alphabet.downcase %>"><%= alphabet %></a></li>
                    <% end %>
                    <li><a href="/directory/ll">LL</a></li>
                    <li><a href="/directory/m">M</a></li>
                    <li><a href="/directory/n">N</a></li>
                    <li><a href="/directory/ñ">Ñ</a></li>
                    <% ('O' .. 'Z').each do |alphabet| %>
                    <li><a href="/directory/<%= alphabet.downcase %>"><%= alphabet %></a></li>
                    <% end %>
                  </ul>
                </div>
              </td>
            </tr>
          </dl>
        </table>
      </div>
    </div>
  </div>
</div>
