<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <table class="table table-striped table-hover">
        <% @terms.each do |term| %>
        <dl>
          <tr>
            <td>
<!--               Below code is more correct but can't get proper route
              <!%= link_to @term, term.name.html_safe %> -->
              <b><a href="/directory/term/<%=term.name %>"><%= term.name.html_safe %></a></b>
              (<%= term.gender %>
              <%= term.part_of_speech %>)
              <%= term.definition.html_safe %>
              <%= term.etymology1.html_safe %>
              <%= term.etymology2.html_safe %>
              <%= term.uses.html_safe %>
              <p></p>
              <p class="indent"><u><b>Romance Cognates:</b></u> <%= term.romance_cognates.html_safe %></p>
              <%= term.notes1.html_safe %>
              <%= term.notes2.html_safe %>
              <%= term.quote1.html_safe %>
              <%= term.quote2.html_safe %>
            </td>
          </tr>
        </dl>
        <% end %>
      </table>
    </div>
  </div>
</div>
