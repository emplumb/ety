<div class="container-fluid">
  <div class="row">
    <div class="text-center">
      <%= paginate @terms %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <table class="table table-striped table-hover">
        <% @terms.each do |term| %>
        <dl>
          <tr>
            <td>
              <b><a href="/term/<%=term.name %>"><%= term.name %></a></b>
              <%= term.gender %>
              <%= term.prefix_suffix %>
              <%= term.part_of_speech %>
              <%= term.definition.try(:html_safe) %>
              <%= term.etymology1.try(:html_safe) %>
              <%= term.etymology2.try(:html_safe) %>
              <%= term.uses.try(:html_safe) %>
              <p></p>
              <div class="indent"><u><b>Romance Cognates:</b></u> <%= term.romance_cognates.try(:html_safe) %></div>
              <p></p>
              <%= term.notes1.try(:html_safe) %>
              <%= term.notes2.try(:html_safe) %>
              <%= term.quote.try(:html_safe) %>
            </td>
          </tr>
        </dl>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="text-center kaminari-font">
      <%= paginate @terms %>
    </div>
    <div class="text-center end-pad">
      <p><%= page_entries_info(@terms, :entry_name => 'results') %></p>
    </div>
  </div>
</div>
