<div class="container-fluid">

  <%= render "/shared/general/mobile_alphabet" %>

  <% if @hit %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well italic entries-top-margin">
          Note: results are returned based on order of importance. The top 2 are <strong>name</strong> then <strong>definition</strong>.
        </div>
      </div>
    </div>

    <div class="text-center">
      <%= paginate @results %>
    </div>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <table class="table table-striped table-hover">
          <% @results.each do |result| %>
            <tr>
              <td>

                <% if admin_signed_in? %>
                  <p>
                    <a class="btn btn-default no-radius" href="/term/<%= result.slug %>/edit">Edit</a>
                  </p>
                <% end %>

                <!-- Name, Gender, Prefix/suffix, Part of speech, Definition -->
                <b><a href="/term/<%= result.slug %>"><%= sanitize result.try(:highlight).try(:name) ? result.highlight.name[0] : result.name, tags: %w(b em a u i sup sub p), attributes: %w(href) %></a></b>
                <%= result.gender %>
                <%= result.p_s %>
                <%= result.part_of_speech %>

                <%= sanitize result.try(:highlight).try(:definition) ? result.highlight.definition[0] : result.definition, tags: %w(b em a u i sup sub p), attributes: %w(href) %>

                <% if result.etymology1.present? %>
                  <p></p>
                  <%= sanitize result.try(:highlight).try(:etymology1) ? result.highlight.etymology1[0] : result.etymology1, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                <% end %>

                <%= sanitize result.try(:highlight).try(:etymology2) ? result.highlight.etymology2[0] : result.etymology2, tags: %w(b em a u i sup sub p), attributes: %w(href) %>

                <% if result.uses.present? %>
                  <p></p>
                  <%= sanitize result.try(:highlight).try(:uses) ? result.highlight.uses[0] : result.uses, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                <% end %>

                <% if result.variants.present? %>
                  <p></p>
                  <div class="p-indent">
                    <b><u>Dialect Variants:</u></b>
                    <%= sanitize result.try(:highlight).try(:variants) ? result.highlight.variants[0] : result.variants, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                  </div>
                <% end %>

                <% if result.romance_cognates.present? %>
                  <p></p>
                  <div class="p-indent">
                    <b><u>Romance:</u></b>
                    <%= sanitize result.try(:highlight).try(:romance_cognates) ? result.highlight.romance_cognates[0] : result.romance_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                  </div>
                <% end %>

                <% if result.italic_cognates.present? %>
                  <p></p>
                  <div class="p-indent">
                    <b><u>Italic:</u></b>
                    <%= sanitize result.try(:highlight).try(:italic_cognates) ? result.highlight.italic_cognates[0] : result.italic_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                  </div>
                <% end %>

                <% if result.etruscan.present? %>
                  <p></p>
                  <div class="p-indent">
                    <b><u>Etruscan:</u></b>
                    <%= sanitize result.try(:highlight).try(:etruscan) ? result.highlight.etruscan[0] : result.etruscan, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                  </div>
                <% end %>

                <% if result.celtic_cognates.present? %>
                  <p></p>
                  <div class="p-indent">
                    <b><u>Celtic:</u></b>
                    <%= sanitize result.try(:highlight).try(:celtic_cognates) ? result.highlight.celtic_cognates[0] : result.celtic_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                  </div>
                <% end %>

                <% if result.germanic_cognates.present? %>
                  <p></p>
                  <div class="p-indent">
                    <b><u>Germanic:</u></b>
                    <%= sanitize result.try(:highlight).try(:germanic_cognates) ? result.highlight.germanic_cognates[0] : result.germanic_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                  </div>
                <% end %>

                <% if result.baltoslavic_cognates.present? %>
                  <p></p>
                  <div class="p-indent">
                    <b><u>Balto-Slavic:</u></b>
                    <%= sanitize result.try(:highlight).try(:baltoslavic_cognates) ? result.highlight.baltoslavic_cognates[0] : result.baltoslavic_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                  </div>
                <% end %>

                <% if result.albanian_cognates.present? %>
                  <p></p>
                  <div class="p-indent">
                    <b><u>Albanian:</u></b>
                    <%= sanitize result.try(:highlight).try(:albanian_cognates) ? result.highlight.albanian_cognates[0] : result.albanian_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                  </div>
                <% end %>

                <% if result.hellenic_cognates.present? %>
                  <p></p>
                  <div class="p-indent">
                    <b><u>Hellenic:</u></b>
                    <%= sanitize result.try(:highlight).try(:hellenic_cognates) ? result.highlight.hellenic_cognates[0] : result.hellenic_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                  </div>
                <% end %>

                <% if result.armenian_cognates.present? %>
                  <p></p>
                  <div class="p-indent">
                    <b><u>Armenian:</u></b>
                    <%= sanitize result.try(:highlight).try(:armenian_cognates) ? result.highlight.armenian_cognates[0] : result.armenian_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                  </div>
                <% end %>

                <% if result.indoiranian_cognates.present? %>
                  <p></p>
                  <div class="p-indent">
                    <b><u>Indo-Iranian:</u></b>
                    <%= sanitize result.try(:highlight).try(:indoiranian_cognates) ? result.highlight.indoiranian_cognates[0] : result.indoiranian_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                  </div>
                <% end %>

                <% if result.semitic.present? %>
                  <p></p>
                  <div class="p-indent">
                    <b><u>Semitic:</u></b>
                    <%= sanitize result.try(:highlight).try(:semitic) ? result.highlight.semitic[0] : result.semitic, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                  </div>
                <% end %>

                <% if result.uralic.present? %>
                  <p></p>
                  <div class="p-indent">
                    <b><u>Uralic:</u></b>
                    <%= sanitize result.try(:highlight).try(:uralic) ? result.highlight.uralic[0] : result.uralic, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                  </div>
                <% end %>

                <% if result.ne_caucasian.present? %>
                  <p></p>
                  <div class="p-indent">
                    <b><u>Northeast Caucasian:</u></b>
                    <%= sanitize result.try(:highlight).try(:ne_caucasian) ? result.highlight.ne_caucasian[0] : result.ne_caucasian, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                  </div>
                <% end %>

                <% if result.ie_cognates.present? %>
                  <p></p>
                  <div class="p-indent">
                    <b><u>Indo-European:</u></b>
                  <%= sanitize result.try(:highlight).try(:ie_cognates) ? result.highlight.ie_cognates[0] : result.ie_cognates, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                  </div>
                <% end %>

                <% if result.notes1.present? %>
                  <p></p>
                  <%= sanitize result.try(:highlight).try(:notes1) ? result.highlight.notes1[0] : result.notes1, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                <% end %>

                <% if result.notes2.present? %>
                  <p></p>
                  <%= sanitize result.try(:highlight).try(:notes2) ? result.highlight.notes2[0] : result.notes2, tags: %w(b em a u i sup sub p), attributes: %w(href) %>
                <% end %>

              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>

    <div class="text-center">
      <%= paginate @results %>
    </div>
  <% end %>

  <div class="text-center end-pad <%= !@hit ? 'entries-top-margin' : '' %>" id="<%= !@hit ? 'no-results' : 'results' %>">
    <%= page_entries_info(@results, :entry_name => 'results') %>
  </div>

</div>
