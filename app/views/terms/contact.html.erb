<div class="container">
  <div class="row">
    <div class="font col-md-7 col-md-offset-2">
      <div class="page-header">
        <h2>Contact Us</h2>
      </div>
      <p></p>
      <p>Please reach out to us for any questions, comments, or suggestions. We appreciate any and all feedback.</p>
      <p></p>
      <form action="mailto:emplumb@gmail.com" method="GET" enctype="text/plain">
        <!-- Hidden input for authenticity token to protect from forgery -->
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

        <!-- Label and input for first name -->
        <div class="form-group">
          <label for="name" class="control-label">
            Name&#42;
          </label>
          <input required type="text" id="first-name" name="first-name" placeholder="First Name" class="form-control">
        </div>
        <!-- Label and input for last name -->
        <div class="form-group">
          <input required type="text" id="last-name" name="last-name" placeholder="Last Name" class="form-control">
        </div>

        <!-- Label and input for email -->
        <div class="form-group">
          <label for="email" class="control-label">
            Email&#42;
          </label>
          <input required type="text" id="email" name="email" class="form-control">
        </div>

        <!-- Label and input for subject -->
        <div class="form-group">
          <label for="subject" class="control-label">
            Subject&#42;
          </label>
          <input required type="text" id="subject" name="subject" class="form-control">
        </div>

        <!-- Label and input for message -->
        <div class="form-group">
          <label for="comment" class="control-label">
            Message&#42;
          </label>
          <textarea required name="comment" class="form-control" rows="5" id="comment/"></textarea>
        </div>
        <button class="btn btn-success" id="submit-font">
          Submit
        </button>
        <%= link_to "Cancel", root_path, id: "cancel-font" %>
      </form>
    </div>
  </div>
</div>
